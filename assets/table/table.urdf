<?xml version="1.0"?>
<robot name="table">
    <!-- Tabletop -->
    <link name="tabletop">
        <visual>
            <geometry>
                <box size="2.0 1.0 0.1"/>
            </geometry>
            <material name="wood_texture">
                <texture filename="wood.png"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="2.0 1.0 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Table Legs -->
    <link name="leg1">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.3"/>
            </geometry>
        </visual>
    </link>
    <joint name="leg1_joint" type="fixed">
        <parent link="tabletop"/>
        <child link="leg1"/>
        <origin xyz="0.975 0.475 -0.15"/>
    </joint>

    <link name="leg2">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.3"/>
            </geometry>
        </visual>
    </link>
    <joint name="leg2_joint" type="fixed">
        <parent link="tabletop"/>
        <child link="leg2"/>
        <origin xyz="-0.975 0.475 -0.15"/>
    </joint>

    <link name="leg3">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.3"/>
            </geometry>
        </visual>
    </link>
    <joint name="leg3_joint" type="fixed">
        <parent link="tabletop"/>
        <child link="leg3"/>
        <origin xyz="-0.975 -0.475 -0.15"/>
    </joint>

    <link name="leg4">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.3"/>
            </geometry>
        </visual>
    </link>
    <joint name="leg4_joint" type="fixed">
        <parent link="tabletop"/>
        <child link="leg4"/>
        <origin xyz="0.975 -0.475 -0.15"/>
    </joint>
</robot>
